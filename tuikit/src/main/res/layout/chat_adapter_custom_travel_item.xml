<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zou_bian_line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_divider"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/headUrl"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/head2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胡八一"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/userCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/depart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_divider"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="保定"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/depart_name"
                android:background="@drawable/icon_travel_arrows"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/goals_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/list_divider"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="哈尔滨"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/numberDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行程天数：3天"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成人：580元"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/returnPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="返200元"
                android:textColor="@color/red_setting"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalPriceChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成人：580元"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/returnPriceChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="返200元"
                android:textColor="@color/red_setting"
                android:textSize="14dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/spotName"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="10dp"
            android:text="【最美古韵】济南 泰山 双高三日游"
            android:textColor="@color/black"
            android:textSize="14dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="9dp"
            android:background="@color/login_line" />
    </LinearLayout>

</LinearLayout>