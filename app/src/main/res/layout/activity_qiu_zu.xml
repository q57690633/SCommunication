<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_forget_password_code_fort">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/widget_toobar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="9dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/quanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:background="@drawable/biaoqian_radius_top_blue"
                android:padding="10dp"
                android:text="全部"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ershoufang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biaoqian_radius_top"
                android:padding="10dp"
                android:text="二手房"
                android:textColor="@color/register_font"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/xinfang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="31dp"
                android:background="@drawable/biaoqian_radius_top"
                android:padding="10dp"
                android:text="新房"
                android:textColor="@color/register_font"
                android:textSize="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <LinearLayout
                android:id="@+id/quyu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quyu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_quyu"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fangxin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fangxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房型"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_fangxin"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_price"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/measure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面积"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_measure"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排序"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_sort"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_recyler_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingLeft="11dp"
                android:paddingRight="12dp"
                android:scrollbars="none"
                android:nestedScrollingEnabled="false"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler_sell_duoxuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never"
                android:paddingLeft="11dp"
                android:paddingRight="12dp"
                android:scrollbars="none"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="没有更多数据了"
                android:textColor="@color/sell_font"
                android:textSize="14sp" />
        </LinearLayout>



        <include
            android:id="@+id/house_fangxin"
            layout="@layout/item_house_fangxin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/house_more"
            layout="@layout/item_house_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/house_price"
            layout="@layout/item_house_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/house_measure"
            layout="@layout/item_house_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/house_sort"
            layout="@layout/item_house_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <RelativeLayout
            android:id="@+id/btn_duoxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/collect_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/btn_blue"
                android:paddingLeft="30dp"
                android:paddingTop="9dp"
                android:paddingRight="30dp"
                android:paddingBottom="9dp"
                android:text="收藏"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delete_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/collect_btn"
                android:background="@drawable/btn_green"
                android:paddingLeft="30dp"
                android:paddingTop="9dp"
                android:paddingRight="30dp"
                android:paddingBottom="9dp"
                android:text="转发"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
