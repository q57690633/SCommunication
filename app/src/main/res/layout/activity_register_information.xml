<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.huxin.communication.ui.RegisterInformationActivity">


    <include layout="@layout/widget_toobar" />


    <LinearLayout
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/province_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/login_forget_password_code_fort"
            android:gravity="center">

            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="选择省"
                android:textColor="@color/login_walling_fort"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/province"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_triangle" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/city_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/login_forget_password_code_fort"
            android:gravity="center">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="选择市"
                android:textColor="@color/login_walling_fort"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/city"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_triangle" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/county_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/login_forget_password_code_fort"
            android:gravity="center">

            <TextView
                android:id="@+id/county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="选择县"
                android:textColor="@color/login_walling_fort"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/county"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_triangle" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/region"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:text="填写工作所在地，才可进入本地区聊天群"
        android:textColor="@color/login_walling_fort"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/type_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="89dp"
            android:background="@color/blue"
            android:padding="10dp"
            android:text="公司"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/one_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="89dp"
            android:background="@color/login_forget_password_code_fort"
            android:padding="10dp"
            android:text="个人"
            android:textColor="@color/register_font"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_information"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/line_Occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="填写公司名称（简称）" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:background="@color/login_line" />

            <EditText
                android:id="@+id/company_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="17dp"
                android:background="@null"
                android:hint="请输入公司营业执照代码" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:background="@color/login_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:text="自动加入同一公司群"
                android:textColor="@color/login_walling_fort"
                android:textSize="14dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_Occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_name"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="14dp"
            android:background="@color/login_forget_password_code_fort"
            android:gravity="center">

            <TextView
                android:id="@+id/Occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="选择职业"
                android:textColor="@color/login_walling_fort"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@id/Occupation"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_triangle" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/one_person_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_information"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_Occupation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_name"
                android:layout_gravity="right"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="14dp"
                android:background="@color/login_forget_password_code_fort"
                android:gravity="center">

                <TextView
                    android:id="@+id/Occupation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="选择从业类型"

                    android:textColor="@color/login_walling_fort"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="13dp"
                    android:layout_toRightOf="@id/Occupation_type"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_triangle" />


            </RelativeLayout>

            <EditText
                android:id="@+id/Invitation_code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="17dp"
                android:background="@color/login_forget_password_code_fort"
                android:hint="填写邀请码"
                android:paddingLeft="12dp"
                android:paddingRight="96dp" />

            <EditText
                android:id="@+id/Invitation_code_two"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="17dp"
                android:background="@color/login_forget_password_code_fort"
                android:hint="填写邀请码"
                android:paddingLeft="12dp"
                android:paddingRight="96dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/region"
                android:layout_gravity="right"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:text="必须填写两名同行的邀请码才可进入"
                android:textColor="@color/login_walling_fort"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/jinru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_name"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="19dp"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="15dp"
        android:text="进入"
        android:textColor="@color/white"
        android:textSize="17dp" />


</RelativeLayout>
