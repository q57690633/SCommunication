<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huxin.communication.ui.house.phone.InvitationActivity">

    <include layout="@layout/widget_toobar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="每邀请1名同行注册加入"
        android:textColor="@color/register_font"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="双方即可获得置顶权益各1次"
        android:textColor="@color/register_font"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:scaleType="centerCrop"
        android:background="@color/blue"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="向朋友展示上方二维码进行推荐"
        android:textColor="@color/register_font"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="19dp"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="15dp"
        android:text="发送到微信"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
