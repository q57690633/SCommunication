<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_forget_password_code_fort">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/widget_toobar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/spot_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:background="@drawable/biaoqian_radius_top"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="景点票务"
                android:textColor="@color/register_font"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/other_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="76dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/biaoqian_radius_top"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="其他票务"
                android:textColor="@color/register_font"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/mudidi_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_spot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="景点"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_spot"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="37dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_price"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="37dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排序"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/image_sort"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_triangle2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_recyler_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.huxin.communication.view.SwipeRefreshView
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never"
                android:paddingLeft="11dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="10dp"

                android:scrollbars="none"
                android:nestedScrollingEnabled="false"/>
            </com.huxin.communication.view.SwipeRefreshView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_ticket_duoxuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never"
                android:layout_marginBottom="70dp"
                android:paddingLeft="11dp"
                android:paddingRight="12dp"
                android:scrollbars="none"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="没有更多数据了"
                android:textColor="@color/sell_font"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>


        <include
            android:id="@+id/ticketing_price"
            layout="@layout/item_ticketing_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/ticketing_sort"
            layout="@layout/item_travel_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/ticketing_more"
            layout="@layout/item_ticket_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/travel_mudi"
            layout="@layout/item_travel_mudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_duoxuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="9dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/collect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_blue"
            android:paddingLeft="30dp"
            android:paddingTop="9dp"
            android:paddingRight="30dp"
            android:paddingBottom="9dp"
            android:text="收藏"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/delete_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/collect_btn"
            android:background="@drawable/btn_green"
            android:paddingLeft="30dp"
            android:paddingTop="9dp"
            android:paddingRight="30dp"
            android:paddingBottom="9dp"
            android:text="转发"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>
