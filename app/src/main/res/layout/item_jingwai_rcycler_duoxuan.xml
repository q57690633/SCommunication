<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jin_wai_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/image_duoxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:background="@drawable/icon_circle_normal" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_divider"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_photo_url"
                    android:layout_width="161dp"
                    android:layout_height="286dp"
                    android:layout_margin="11dp"
                    android:background="@color/blue"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/stick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sign_hot" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/headUrl"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="11dp"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="11dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="胡八一"
                            android:textColor="@color/register_font"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="江苏喜洋洋"
                            android:textColor="@color/register_font"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/userCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="齐齐哈尔"
                            android:textColor="@color/register_font"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    >

                    <TextView
                        android:id="@+id/depart_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/list_divider"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="保定"
                        android:textColor="@color/register_font"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_toRightOf="@id/depart_name"
                        android:layout_width="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="16dp"
                        android:background="@drawable/icon_travel_arrows"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/goals_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/list_divider"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="哈尔滨"
                        android:textColor="@color/register_font"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/numberDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行程天数：3天"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成人：580元"
                        android:textColor="@color/register_font"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/returnPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="返200元"
                        android:textColor="@color/red_setting"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalPriceChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成人：580元"
                        android:textColor="@color/register_font"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/returnPriceChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="返200元"
                        android:textColor="@color/red_setting"
                        android:textSize="14dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/spotName"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginTop="10dp"
                    android:text="【最美古韵】济南 泰山 双高三日游"
                    android:textColor="@color/register_font"
                    android:textSize="14dp" />


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_travel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="9dp"
                    android:background="@color/login_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kanxingcheng"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/green_domestic"
                        android:gravity="center"
                        android:text="看行程"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sendMessage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="21dp"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:text="发消息"
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>