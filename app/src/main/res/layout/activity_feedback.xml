<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <include layout="@layout/widget_toobar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="分类标签"
            android:textColor="@color/register_font"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:background="@color/login_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gongneng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/biaoqian_radius"
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:paddingBottom="10dp"
                android:text="功能建议"
                android:gravity="center"
                android:textColor="@color/login_walling_fort" />

            <TextView
                android:id="@+id/tijian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/biaoqian_radius"
                android:paddingLeft="6dp"
                android:paddingTop="9dp"
                android:paddingRight="3dp"
                android:paddingBottom="9dp"
                android:gravity="center"

                android:text="体验建议"
                android:textColor="@color/login_walling_fort" />


            <TextView
                android:id="@+id/neirong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/biaoqian_radius"
                android:paddingLeft="6dp"
                android:paddingTop="9dp"
                android:paddingRight="3dp"
                android:paddingBottom="9dp"
                android:text="内容建议"
                android:gravity="center"

                android:textColor="@color/login_walling_fort" />


            <TextView
                android:id="@+id/bug"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:background="@drawable/biaoqian_radius"
                android:paddingLeft="6dp"
                android:paddingTop="9dp"
                android:paddingRight="3dp"
                android:paddingBottom="9dp"
                android:text="bug反馈"
                android:gravity="center"

                android:textColor="@color/login_walling_fort" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:background="@color/login_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="我要反馈"
            android:textColor="@color/register_font"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="11dp"
            android:background="@color/login_line" />

        <EditText
            android:id="@+id/fankui"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="28dp"
            android:background="@null"
            android:gravity="top"
            android:hint="如反馈新增功能问题，请直接在此输入需要的功能,我们会第一时间按处理"
            android:paddingTop="9dp"
            android:textColorHint="@color/login_walling_fort" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="11dp"
            android:background="@color/login_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollbarStyle="outsideOverlay"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="4"
            tools:listitem="@layout/list_item_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="11dp"
            android:background="@color/login_line" />

        <TextView
            android:id="@+id/tijiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/biaoqian_radius_blue"
            android:gravity="center"
            android:padding="15dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</ScrollView>
