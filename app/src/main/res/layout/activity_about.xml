<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/widget_toobar"/>

    <ImageView
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:layout_marginTop="79dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="79dp"
        android:background="@color/login_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/register_font"
        android:textSize="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:text="互信APP是互信协同官方手机客户端，为房产经纪人提供房源信息发布、搜索、浏览、管理功能，让您的房产交易更加便捷。"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_walling_fort"
        android:textSize="14dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:text="官方网址：www.huxin.com"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_walling_fort"
        android:textSize="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:text="客服电话：123456789"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="12dp"
        android:background="@color/login_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_walling_fort"
        android:textSize="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:text="版本号：1.0.0"
        android:layout_gravity="center"/>
</LinearLayout>
