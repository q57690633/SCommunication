<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zou_bian_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/transparent"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/list_divider">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_photo_url"
                android:layout_width="161dp"
                android:layout_height="286dp"
                android:layout_margin="11dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/stick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="已浏览23次"
                android:textColor="@color/register_font"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/headUrl"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/head2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/register_font"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="70dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_font"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/userCity"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/register_font"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">

                <TextView
                    android:id="@+id/depart_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_divider"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/register_font"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/depart_name"
                    android:background="@drawable/icon_travel_arrows"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/goals_city"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/list_divider"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/register_font"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/numberDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/register_font"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/register_font"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/returnPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/red_setting"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalPriceChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/register_font"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/returnPriceChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/red_setting"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="14dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/spotName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="29dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/register_font"
                android:textSize="14dp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_travel"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="11dp"
                android:background="@color/login_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
               android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/kanxingcheng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/biaoqian_radius_green"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="看行程"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/biaoqian_radius_blue"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="发消息"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>